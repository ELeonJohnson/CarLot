@using CarLot.Models
@inject CarLot.Data.BusService busService
@inject IJSRuntime _jsRuntime
@inherits OwningComponentBase<BusService>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
