        <div class="tab-pane fade show active" id="pills-inventory" role="tabpanel" aria-labelledby="pills-inventory-tab">
            <h2>Inventory</h2>
            <h4>Buses</h4>
            @foreach (var bus in Model.Input.Bus)
            {
                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <img class="card-img-top" src="data:image/jpeg;base64,@Convert.ToBase64String(bus.Image)">
                            <div class="card-body">
                                @if (bus.New == true)
                                {
                                    <span class="text-muted">NEW</span>
                                }
                                else if (bus.Used == true)
                                {
                                    <span class="text-muted">USED</span>
                                }
                                <h5 class="card-title">$@bus.Price</h5>
                                <span class="card-text">@bus.Year @bus.Make</span>
                                <p class="card-text">
                                    <strong>Exterior Color:</strong>
                                    @bus.ExteriorColor
                                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-circle-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <circle cx="8" cy="8" r="8" />
                                    </svg>
                                    <strong>Interior Color:</strong>
                                    @bus.InteriorColor
                                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-circle-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <circle cx="8" cy="8" r="8" />
                                    </svg>
                                    <strong>Transmission:</strong>
                                    @bus.Transmission
                                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-circle-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <circle cx="8" cy="8" r="8" />
                                    </svg>
                                    <strong>Drivetrain:</strong>
                                    @bus.DriveTrain
                                </p>
                                <div id="details-btn">
                                    <a href="@($"bus/details/{bus.BusId}")" class="btn btn-block">More Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
